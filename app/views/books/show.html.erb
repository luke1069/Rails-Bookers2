<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">

      <%= render 'users/info',user:@user %>

      <div class="row">

        <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary btn-block" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book,local:true do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <p><%= f.text_field:title %></p>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <p><%= f.text_area:body %></p>
        </div>
        <div class="form-group">
          <%= f.submit 'Create Book',class:"btn btn-success" %>
        </div>
      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">

      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book_show.user,:profile_image,:fill,100,100,format:'jpeg',fallback:"no-image-icon-40*40.jpeg" %><br>
              <%= link_to user_path(@book_show.user_id) do %>
                <%= @book_show.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_show.id) do %>
                <%= @book_show.title %>
              <% end %>
            </td>
            <td><%= @book_show.body %></td>
            <th>コメント数：<%= @book_show.post_comments.count %></th>
            <td>
              <% if @book_show.user == current_user %>
                <%= link_to "Edit",edit_book_path(@book_show.id),class:"btn btn-sm btn-success" %>
              <% end %>
            </td>
            <td>
              <% if @book_show.user == current_user %>
                <%= link_to "Destroy",book_path(@book_show.id),method: :delete,class:"btn btn-sm btn-danger","data-confirm"=>"本当に消しますか？" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <% @book_show.post_comments.each do |post_comment| %>
        <%= attachment_image_tag post_comment.user, :profile_image, :fill,50,50, format:"jpeg",fallback:"no-image-icon-40*40.jpeg" %><br>
        <%= link_to user_path(post_comment.user_id) do %>
          <%= post_comment.user.name %>
        <% end %>
        <%= post_comment.comment %>
        <% if post_comment.user == current_user %>
          <%= link_to "Destroy",book_post_comment_path(@book_show,post_comment),method: :delete,class:"btn btn-sm btn-danger" %>
        <% end %>
        <br>
      <% end %>

      <%= form_with model:[@book_show,@post_comment],local:true do |f| %>
        <div class="form-group">
          <%= f.text_area:comment,class:"form-control" %>
        </div>
        <div>
          <%= f.submit '送信' %>
        </div>
      <% end %>

    </div>

  </div>
</div>