<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model:@book,local:true do |f| %>
        <div class="form-group">
          <label for ="book_title">Title</label>
          <p><%= f.text_field:title,autofocus:true,placeholder:@book.title,class:"form-control" %></p>
        </div>
        <div class="form-group">
          <label for ="book_opinion">Opinion</label>
          <p><%= f.text_area:body,placeholder:@book.body,class:"form-control" %></p>
        </div>
        <div>
          <p><%= f.submit 'Update Book',class:"btn btn-success" %></p>
        </div>
      <% end %>
      <%= link_to "Show",book_path(@book) %>
      |
      <%= link_to "Back",books_path %>
    </div>
  </div>
</div>