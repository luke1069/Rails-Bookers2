<h2>Books(books#index)</h2>

<% @books.each do |book| %>
  <div>
    <%= attachment_image_tag book.user,:profile_image, :fill,40,40,format:'jpeg',fallback:"no_image.jpg" %>
    <%= link_to book_path(book.id) do %>
      <p>タイトル：<%= book.title %></p>
    <% end %>
    <p>オピニオン：<%= book.body %></p>
  </div>
<% end %>